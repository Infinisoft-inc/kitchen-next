{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck":true,
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/config/*": ["./config/*"],
      "@/assets/*": ["./src/assets/*"]

    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "mock/**/*",
    "modules/*.d.ts",
    "src/**/*",
    "config/*",
    "typings.d.ts" ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
