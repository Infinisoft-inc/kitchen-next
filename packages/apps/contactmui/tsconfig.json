{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@/config/*": ["./config/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "references": [{ "path": "../../common/tsconfig.json" }],
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/*",
    "modules/*.d.ts",
    "typings.d.ts"
  ],
 "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
