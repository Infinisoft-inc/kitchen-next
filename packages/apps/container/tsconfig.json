{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir":"dist",
    "strict": true,
    "skipLibCheck":true,
    "paths": {
      "@/data/*": ["./data/*"],
      "@/config/*": ["./config/*"],
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "references": [{ "path": "../../common/tsconfig.json" }],
  "include": [
    "data/**/*",
    "src/**/*",
    "config/*",
    "modules/*.d.ts",
    "typings.d.ts" ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
