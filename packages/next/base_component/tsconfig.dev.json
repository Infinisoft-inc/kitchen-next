{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "emitDeclarationOnly":true,
    "declaration":true,
    "outFile": "dev/types.d.ts",
    "sourceMap": true,
    "baseUrl": "./src",
    "rootDir":"src",
    "outDir":"./dev",
    "strict": true,
    "skipLibCheck":true,
    "paths": {
      "@/config/*": ["./config/*"],
      "@/component/*": ["./component/*"],
      "@/assets/*": ["./component/assets/*"],
      "@/presets/*": ["./component/presets/*"],
      "@/subcomponents/*": ["./component/subcomponents/*"],
      "@/style/*": ["./component/style/*"],
      "@/hooks/*": ["./core/hooks/*"],
      "@/state/*": ["./core/state/*"],
      "@/helpers/*": ["./core/helpers/*"],
      "@/context/*": ["./core/context/*"],
      "@/core/*": ["./core/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "mock/**/*",
    "./src/**/*",
    "src/config/*",
    "modules/*.d.ts",
    "typings.d.ts" ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dev",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
