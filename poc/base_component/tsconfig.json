{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir":"dist",
    "strict": true,
    "skipLibCheck":true,
    "paths": {
      "@/config/*": ["config/*"],
      "@/component/*": ["src/component/*"],
      "@/assets/*": ["src/component/assets/*"],
      "@/presets/*": ["src/component/presets/*"],
      "@/subcomponents/*": ["src/component/subcomponents/*"],
      "@/style/*": ["src/component/style/*"],
      "@/hooks/*": ["src/core/hooks/*"],
      "@/state/*": ["src/core/state/*"],
      "@/helpers/*": ["src/core/helpers/*"],
      "@/context/*": ["src/core/context/*"],
      "@/core/*": ["src/core/*"],
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/*",
    "modules/*.d.ts",
    "typings.d.ts" ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
