  "license": "MIT",
  "scripts": {
    "start:dev": "webpack serve -c webpack.config.dev.js --open",
    "start:prod": "webpack serve -c webpack.config.prod.js --open",
    "build": "rimraf \"dist\"&& concurrently \"tsc\" \"webpack -c webpack.config.prod.js\"",
    "build:dev": "rimraf \"dev\"&& concurrently \"tsc\" \"webpack -c webpack.config.dev.js\"",
    "build:dev:watch": "rimraf \"dev\"&& concurrently \"tsc -p tsconfig.dev.json -w\" \"webpack -c webpack.config.dev.js\"",
    "build:prod": "rimraf \"dist\"&& concurrently \"tsc\" \"webpack -c webpack.config.prod.js\"",
    "build:prod:watch": "rimraf \"dist\"&& concurrently \"tsc -p tsconfig.json -w\" \"webpack -c webpack.config.prod.js\"",
    "build:analyze": "kli component build --analyze --prod",
    "build:analyze:baseline": "kli component build --analyze-baseline --prod",
    "performance:analyze:mobile": "node tools/performance.js mobile",
    "performance:analyze:desktop": "node tools/performance.js desktop",
    "test": "jest",
    "test:watchAll": "jest --watchAll",
    "test:coverage": "jest --coverage&& start analyze/coverage/lcov-report/index.html",
    "deploy": "kli component deploy",
    "serve:dist": "serve -s dist",
    "serve:dev": "serve -s dev",
    "clean": "rimraf analyze dist node_modules dev",
    "config:update": "kli config update",
    "task": "kli task run"
  },
  "devDependencies": {
    "@infini-soft/kli": "^0.0.41",
    "@module-federation/fmr": "^0.0.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
