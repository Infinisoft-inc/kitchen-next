    "@types/react-dom": "^18.0.5",
    "chrome-launcher": "^0.15.1",
    "finalhandler": "^1.2.0",
    "lighthouse": "^9.6.2",
    "serve-static": "^1.15.0",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "infinisoft": {
    "moduleFederation": {
